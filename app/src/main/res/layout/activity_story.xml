<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/story_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" 
    tools:context=".Chapter01">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/chapter_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@color/white"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="#454545"
            android:text="1챕터"/>
        <Button
            android:id="@+id/back_btn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="끝내기"
            android:textSize="8pt"
            android:background="@drawable/name_btn"
            />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/character_img"
             android:layout_width="290dp"
             android:layout_height="410.85dp"
             android:layout_marginLeft="61dp"
            android:layout_marginTop="62dp"
             />
        <Button
            android:id="@+id/chat_box"
            android:layout_width="390dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:layout_marginTop="221dp"
            android:padding="20dp"
            android:text="대화가 쓰여지는 자리 입니다"
            android:textColor="@color/black"
            android:textSize="9pt"
            android:textStyle="bold"
            android:background="@drawable/chat_window"
            />
        <Button
            android:id="@+id/name_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="89.5dp"
            android:layout_marginLeft="20dp"
            android:text="JAVA"
            android:textColor="#3E3E3E"
            android:textSize="12pt"
            android:textStyle="bold"
            android:background="@drawable/name_btn"/>
    </FrameLayout>
</LinearLayout>